{
  "apps": [
    {
      "name": "Witchazzan",
      "script": "server/server.js",
      "max_memory_restart": "500M",
      "ignore_watch": [
        ".idea",
        ".git",
        ".gitignore",
        "assets",
        "dist",
        "persistentData",
        "client",
        "playwright.config.js",
        "tests",
        "test-results"
      ],
      "merge_logs": true,
      "exec_interpreter": "node",
      "env": {
        "NODE_ENV": "dev",
        "PORT": "8080"
      }
    }
  ]
}
